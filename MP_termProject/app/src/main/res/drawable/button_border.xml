<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="1dp" android:drawable="@color/main_color" android:left="1dp" android:right="1dp" android:state_pressed="true" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/black" />
        </shape>
    </item>

    <item android:bottom="1dp" android:drawable="@color/main_color" android:left="1dp" android:right="1dp" android:state_pressed="false" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/black" />
        </shape>
    </item>
</selector>