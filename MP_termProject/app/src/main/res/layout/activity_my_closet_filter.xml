<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mycloset.filter.MyClosetFilterActivity">

    <LinearLayout
        android:id="@+id/filter_type"
        android:layout_width="160dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/filter_type_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/filter_type_category"
            android:textColor="@color/text_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/filter_type_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/filter_type_color"
            android:textColor="@color/text_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/filter_type_season"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/filter_type_season"
            android:textColor="@color/text_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/filter_type_shared"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/filter_type_shared"
            android:textColor="@color/text_color"
            android:textSize="20sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ListView
            android:id="@+id/filter_list_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:choiceMode="multipleChoice"/>
        <ListView
            android:id="@+id/filter_list_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:choiceMode="multipleChoice"/>
        <ListView
            android:id="@+id/filter_list_season"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:choiceMode="multipleChoice"/>
        <ListView
            android:id="@+id/filter_list_shared"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:choiceMode="singleChoice"/>
    </FrameLayout>


</LinearLayout>